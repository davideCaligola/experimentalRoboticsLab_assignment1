<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="gui" default="true"/>
  <arg name="world" default="empty"/>


  <include file="$(find rosbot_bringup)/launch/rosbot_gazebo.launch"></include>

  <include file="$(find rosbot_gazebo)/launch/rosbot_world.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="world" value="$(find rosbot_gazebo)/worlds/aruco_assignment.world"/>
  </include>
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rosbot_description)/rviz/mapping.rviz"/>

</launch>
