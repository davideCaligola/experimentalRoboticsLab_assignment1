<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="gui" default="true"/>
  <arg name="world" default="empty"/>

  <include file="$(find rosbot_bringup)/launch/rosbot_gazebo.launch"></include>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="world_name" value="$(find assignment_1)/worlds/aruco_assignment.world"/>
  </include>
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rosbot_description)/rviz/mapping.rviz"/>

  
  <arg name="rate" default="20"/>
  <arg name="rate_vis" value="100"/>
  
  <param name="process_rate" value="$(arg rate)"/>
  <param name="vision_rate" value="$(arg rate_vis)"/>
  
  <node name="robot_vision" pkg="assignment_1" type="robot_vision.py" output="screen"/>
  <node name="robot_control" pkg="assignment_1" type="control_act_server.py" output="screen" />
  <node name="robot_logic" pkg="assignment_1" type="logic.py" output="screen" required="true"/>

</launch>
